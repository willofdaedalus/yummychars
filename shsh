# Basic colors
echo -e "\033[31mThis is red\033[0m"
echo -e "\033[32mThis is green\033[0m"

# 256-color mode
for i in {0..255}; do
  echo -e "\033[48;5;${i}mColor ${i}\033[0m"
done

# True color mode
echo -e "\033[38;2;255;0;0mThis is true red\033[0m"
echo -e "\033[38;2;0;255;0mThis is true green\033[0m"

